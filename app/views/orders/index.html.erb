<div class="container users">
  <p id="notice"><%= notice %></p>

  <h1>Orders</h1>

  <table class="table table-bordered table-striped nowrap" style="background: white;">
    <thead>
      <tr>
        <th>Product ID</th>
        <th>User ID</th>
        <th>Total</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.product_id %></td>
          <td><%= order.user_id %></td>
          <td><%= order.total %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>