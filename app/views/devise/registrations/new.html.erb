<div class="container signin">
  <div class="form-signin">

    <h2 class="form-signin-heading">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: 'sr-only' %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control form-control-top', type: 'email', placeholder: 'Email adress' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'sr-only' %>

        <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-center', placeholder: 'Password', type: 'password' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'sr-only' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control-bottom', type: 'password', placeholder: 'Confirm password' %>
      </div>

        <% if @minimum_password_length %>
        <em>Password length: <%= @minimum_password_length %> characters minimum</em>
        <% end %>

      <div class="actions", style="margin-top: 10px;">
        <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
