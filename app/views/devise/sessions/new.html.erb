<div class="container signin">
  <div class="form-signin">
    <h2 class="form-signin-heading">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>


      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email, autofocus: true, class: 'form-control form-control-top', type: 'email', placeholder: 'Email address' %>


      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, class: 'form-control form-control-bottom', type: 'password', placeholder: 'Password', autocomplete: "off" %>


      <% if devise_mapping.rememberable? -%>

          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'checkbox-label' %>

      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>